<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:XFMovieSearch" x:Class="XFMovieSearch.XFMovieSearchPage">
    <ContentPage.Content>
        <StackLayout Margin="20,40,20,20"
                     VerticalOptions="Start"
                     Spacing="10">
            <Label Text="Enter words in a movie title:"
                HorizontalOptions="Start" />
            <Entry x:Name="MovieEntry"
                   Placeholder="Movie word"/>
            <Button x:Name="GetMoviesButton"
                    Text="Get Movies" 
                    BorderColor="Color.Gray"
                    Clicked="GetMoviesButton_OnClicked"/>
            <Label x:Name="MovieLabel"
                   Text=""
                   FontSize="Large"/>
            <ActivityIndicator x:Name="Spinner" 
                               Color="Red" 
                               IsRunning="false" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
